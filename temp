    function get_cars() {
    $args = array(
      'post_type'   => 'cars',
      'post_status' => 'publish',
    );
    $car_html = '';
    $query = new WP_Query( $args );
    if( $query->have_posts() ){
      while( $query->have_posts() ){
        $query->the_post();
        $image = rwmb_meta('vbs_car-image', 'type=plupload_image&size=thumbnail');
        foreach ($image as $img) {
          $src = $img['url'];
        }
        $car_html .= '<div class="car_data">';
        $car_html .= '<div class="car_image"><img src="' . $src . '" /></div>';
        $car_html .= '<div class="car_info_right">';
        $car_html .= '<h4 class="car_name">' . get_the_title() . '</h4>';
        $car_html .= '<p class="car_text">' . rwmb_meta('vbs_description') . '</p>';
        $car_html .= '<ul class="car_info">
<li>' . rwmb_meta('vbs_passengers') . '</li>
<li>' . rwmb_meta('vbs_luggage') . '</li>
<li>' . rwmb_meta('vbs_handbag') . '</li>
<li>' . rwmb_meta('vbs_child_seats') . '</li>
        </ul>';
        $car_html .= '</div>';
        $car_html .= '</div>';
      }
    }
    wp_reset_query();
    return $car_html;
  }